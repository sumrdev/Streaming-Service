<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="root" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.PlayMenuController">
   <bottom>
      <HBox alignment="CENTER" prefHeight="47.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="36.0" fitWidth="37.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@play.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
   </bottom>
   <top>
      <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#back" prefHeight="35.0" prefWidth="44.0" styleClass="normal-button" text="←">
               <font>
                  <Font size="33.0" />
               </font>
               <padding>
                  <Insets bottom="-40.0" left="-40.0" right="-40.0" top="-40.0" />
               </padding>
            </Button>
            <Region prefHeight="0.0" prefWidth="20.0" HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" prefHeight="0.0" prefWidth="100.0">
               <children>
                  <Text fx:id="title" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0">
                     <font>
                        <Font size="26.0" />
                     </font></Text>
                  <Text fx:id="episode" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0">
                     <font>
                        <Font size="20.0" />
                     </font></Text>
               </children>
            </VBox>
            <Region layoutX="54.0" layoutY="10.0" prefHeight="0.0" prefWidth="20.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" minHeight="150.0" minWidth="200.0" styleClass="backgroundImage" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
